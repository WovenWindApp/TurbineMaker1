<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash2"
    tools:context="edu.umich.turbinemaker1.MainScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal|top">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/main_screen_button_1"
                android:onClick="goToPartActivity"
                android:background="@drawable/main_screen_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/new_game"
                android:textColor="#000000"
                android:layout_marginEnd="277dp"
                android:layout_marginTop="239dp"
                android:enabled="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/main_screen_button_2"
                android:onClick="goToMapActivity"
                android:background="@drawable/main_screen_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Map Demo"
                android:textColor="#000000"
                android:layout_below="@+id/main_screen_button_1"
                android:layout_alignStart="@+id/main_screen_button_1"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/main_screen_button_3"
                android:background="@drawable/main_screen_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/about"
                android:textColor="#000000"
                android:layout_below="@+id/main_screen_button_2"
                android:layout_alignEnd="@+id/main_screen_button_2"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/main_screen_button_4"
                android:background="@drawable/main_screen_button"
                android:onClick="goToTurbineDesign"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="TurbineDesign"
                android:textColor="#000000"
                android:layout_below="@+id/main_screen_button_3"
                android:layout_alignEnd="@+id/main_screen_button_3"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
